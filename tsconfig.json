{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "outDir": "dist",
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "inlineSources": true,
    "skipLibCheck": true
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts"
  ],
  "compileOnSave": true
}
